<?xml version="1.0"?>
<odoo>
    <record id="view_stock_landed_cost_form_inherit" model="ir.ui.view">
        <field name="name">view.stock.landed.cost.form.inherit</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='valuation_adjustments']/field/tree/field[@name='product_id']" position="after">
                <field name="name"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Matriz">
                    <group>
                        <label for="matrix_lines" string=""/>
                        <field name="matrix_lines" style="border:1px solid #ebebeb;" nolabel="1"
                               widget="x2many_2d_matrix" field_x_axis="y_axis" field_y_axis="x_axis" field_value="cell_value" show_row_totals="True" show_column_totals="True">
                            <tree limit="100">
                                <field name="x_axis"/>
                                <field name="y_axis"/>
                                <field name="cell_value"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>