<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="before">
                <div
                    class="alert alert-danger mb-0"
                    role="alert"
                    invisible="move_type in ['in_invoice', 'in_refund', 'entry'] or tipo_documento == 'disabled' or state_tributacion or state in ['draft', 'cancel']"
                >
                    The document has not yet been issued, it will be sent automatically in 5 minutes, if you need to send it manually press <button class="oe_link" type="object" name="generate_and_send_invoice" style="padding: 0; vertical-align: baseline;">Send Document</button>
                </div>
                <div
                    class="alert alert-warning mb-0"
                    role="alert"
                    invisible="move_type in ['in_invoice', 'in_refund', 'entry'] or tipo_documento == 'disabled' or state_tributacion != 'procesando' or state in ['draft', 'cancel']"
                >
                The document was issued successfully, however we still do not have the answer, it will be consulted in 10 minutes, if you wish to consult it manually press <button class="oe_link" type="object" name="action_check_hacienda" style="padding: 0; vertical-align: baseline;">Consult Document</button>
                </div>
            </xpath>

            <xpath expr="//button[@name='action_reverse']" position="replace">
                <button
                    name="action_reverse"
                    string="Add Credit Note"
                    type="object"
                    groups="account.group_account_invoice"
                    invisible="move_type not in ['out_invoice', 'in_invoice'] or state != 'posted'"
                />
            </xpath>

            <xpath expr="//button[@name='button_draft']" position="after">

                <button name="action_send_mrs_to_hacienda" type="object"
                    string="Send Receiver Message"
                    invisible="move_type not in ['in_invoice', 'in_refund', 'entry'] or tipo_documento == 'FEC'" />
                <button name="action_create_fec" type="object" string="Send FEC"
                    invisible="tipo_documento != 'FEC' or state_tributacion not in [False,'rechazado', 'error']" />
                <button name="create_partner_from_xml" class="oe_highlight" type="object"
                    string="Create Provider"
                    invisible="move_type in ['entry', 'out_invoice', 'out_refund'] or partner_id or not xml_supplier_approval" />
            </xpath>

            <field name="partner_id" position="after">
                <field name="economic_activities_ids" invisible="1" readonly="1"
                    options='{"active_test": [("type","in", ("in_invoice", "in_refund"))]}' />
                <field name="partner_economic_activities_ids" invisible="1" readonly="1"
                    options='{"active_test": [("type","in", ("in_invoice", "in_refund"))]}' />
                <field name="economic_activity_id"
                    readonly="state != 'draft'"
                    required="move_type in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or tipo_documento == 'FEC'"
                    domain="[('id', 'in', economic_activities_ids),]"
                    options='{"no_open": True, "no_create": True, "active_test": [("type","in", ("in_invoice", "in_refund"))]}' />
                <field name="partner_economic_activity_id"
                    required="tipo_documento == 'FEC'"
                    invisible="move_type not in ['in_invoice', 'in_refund'] and tipo_documento != 'FEC'"
                    domain="[('id', 'in', partner_economic_activities_ids),]"
                    options='{"no_open": True, "no_create": True, "active_test": [("type","in", ("in_invoice", "in_refund"))]}' />
                <field name="number_electronic" readonly="1"
                    invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']" />
                <field name="sequence" readonly="1"
                    invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']" />
            </field>

            <field name="invoice_date" position="attributes">
                <attribute name="readonly"></attribute>
            </field>

            <field name="invoice_date" position="after">
                <field name="date_issuance" readonly="1"
                    invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']" />
                <field name="tipo_documento"
                readonly="state != 'draft'"
                invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']"
                required="move_type in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']" />
                <field name="payment_methods_id"
                readonly="state != 'draft'"
                invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']"
                required="move_type in ['out_invoice', 'out_refund']"/> <!--,'in_invoice', 'in_refund']" /-->
            </field>

            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']"
                position="after">
                <field name="categ_name" invisible="1" readonly="1" />
                <field name="product_code" invisible="1" readonly="1" />
                <field name="third_party_id" invisible="product_code != '04'"
                    optional="hide" />
            </xpath>
            <!-- Move views -->
            <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                <field name="categ_name" invisible="1" readonly="1" />
                <field name="product_code" invisible="1" readonly="1" />
                <field name="third_party_id" invisible="product_code != '04'"
                    optional="hide" />
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']"
                position="after">
                <field name="discount_note" optional="hide" />
                <field name="tariff_head" optional="hide" />
            </xpath>
            <!-- Move views -->
            <!-- <xpath expr="//field[@name='line_ids']//tree//field[@name='discount']"
            position="after">
                <field name="discount_note" optional="hide"/>
                <field name="tariff_head" optional="hide"/>
            </xpath> -->

            <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>

            <xpath expr="(//field[@name='tax_totals'])" position="after">
                <field name="amount_tax_electronic_invoice"
                    invisible="move_type in ['out_invoice', 'out_refund']" />
                <field name="amount_total_electronic_invoice"
                    invisible="move_type in ['out_invoice', 'out_refund']" />
                    <field name="invoice_amount_text" nolabel="1" colspan="2"/>
            </xpath>

            <xpath expr="//page[2]" position="after">
                <page name="fe_invoice_data" string="Electronic Information"
                    invisible="move_type not in ['out_invoice', 'out_refund','in_invoice', 'in_refund']">
                    <group id="fe_tab_group" col="2">
                        <group string="Electronic Acceptance" name="fe_in_info_group" colspan="2"
                            col="5"
                            invisible="tipo_documento == 'FEC' or move_type in ['out_invoice', 'out_refund']">
                            <field name="fname_xml_supplier_approval" invisible="1" colspan="5" />
                            <field name="xml_supplier_approval"
                                filename="fname_xml_supplier_approval" colspan="4"
                                invisible="tipo_documento == 'FEC' or move_type in ['out_invoice', 'out_refund']" />
                            <button name="load_xml_data" type="object" string="Cargar datos del XML"
                                colspan="1"
                                invisible="not xml_supplier_approval or move_type in ['out_invoice', 'out_refund'] or tipo_documento == 'FEC' or state != 'draft'" />
                            <field name="state_invoice_partner" colspan="5"
                                invisible="move_type in ['out_invoice', 'out_refund'] or tipo_documento == 'FEC'" />
                            <field name="iva_condition" colspan="5"
                                invisible="move_type  == 'out_invoice'" />
                            <!--field
                            name="company_activity_id" colspan="5" domain="[('active', '=', True)]"
                            options='{"no_open": True, "no_create": True}'
                            invisible="move_type  == 'out_invoice'" /-->
                        </group>
                        <group name="eref_info_group" colspan="2">
                            <group string="Electronic Document Reference" name="eref_info_group1"
                                colspan="2">
                                <field name="reference_code_id"
                                    readonly="state != 'draft'" />
                                <field name="reference_document_id"
                                    readonly="state != 'draft'" />
                                <field name="invoice_id"
                                    domain="[('number_electronic', '!=', False)]"
                                    readonly="state != 'draft'" />
                                <field name="not_loaded_invoice"
                                    readonly="state != 'draft'" invisible="invoice_id" />
                                <field name="not_loaded_invoice_date"
                                    readonly="state != 'draft'" invisible="invoice_id" />
                            </group>
                            <group string="Electronic Receipts" name="eref_info_group2" colspan="2">
                                <field name="fname_xml_comprobante" invisible="1" readonly="1" />
                                <field name="xml_comprobante" filename="fname_xml_comprobante" />
                                <field name="fname_xml_respuesta_tributacion" invisible="1"
                                    readonly="1" />
                                <field name="xml_respuesta_tributacion"
                                    filename="fname_xml_respuesta_tributacion" />
                                <field name="state_tributacion" readonly="1" />
                                <field name="electronic_invoice_return_message" readonly="1" />
                                <field name="from_mail" />
                                <field name="has_ack" />
                            </group>
                        </group>

                    </group>
                </page>
            </xpath>
            <xpath expr="(//field[@name='partner_id'])" position="attributes">
                <attribute name="widget" />
                <attribute name="readonly">from_mail or state != 'draft'</attribute>
            </xpath>
            <xpath expr="(//field[@name='ref'])" position="attributes">
                <attribute name="readonly">from_mail or state != 'draft'</attribute>
            </xpath>
            <xpath expr="(//field[@name='tipo_documento'])" position="attributes">
                <attribute name="readonly">from_mail or state != 'draft'</attribute>
            </xpath>
            <xpath expr="(//field[@name='invoice_date'])" position="attributes">
                <attribute name="readonly">from_mail or state != 'draft'</attribute>
            </xpath>
            <!--xpath expr="(//field[@name='payment_methods_id'])" position="attributes">
                <attribute name="readonly">from_mail or state != 'draft'</attribute>
            </xpath-->
            <xpath expr="(//field[@name='currency_id'])" position="attributes">
                <attribute name="readonly">from_mail</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="decoration-danger">
                    state_tributacion == 'rechazado'
                </attribute>
            </tree>
            <field name="state" position="before">
                <field name="tipo_documento" string="Doc Elect." optional="show" />
                <field name="sequence" string="Consecutive" optional="show" />
                <field name="move_type" invisible="1" readonly="1" optional="show" />
                <field name="state_tributacion" string="State FE" optional="show" />
            </field>
        </field>
    </record>

