<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_commission" model="ir.ui.view">
        <field name="name">account.move.form.inherit.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']/parent::div" position="after">
                <div class="o_address_format">
                    <field name="es_canje" 
                           attrs="{'invisible': [('move_type', 'not in', ['out_invoice','out_refund'])]}"/>
                    <field name="aplica_comisiones" 
                           attrs="{'invisible': [('move_type', 'not in', ['out_invoice','out_refund'])]}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
