<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Percentage -->
    <record id="advance_discount_selection_percentage" model="advance.discount.selection">
        <field name="name">Percentage</field>
        <field name="value">percentage_discount</field>
    </record>

    <!-- Fix Discount Per Line -->
    <record id="advance_discount_selection_fix_per_line" model="advance.discount.selection">
        <field name="name">Fix Discount Per Line</field>
        <field name="value">fix_discount_per_line</field>
    </record>

    <!-- Fix Discount Per Unit -->
    <record id="advance_discount_selection_fix_per_unit" model="advance.discount.selection">
        <field name="name">Fix Discount Per Unit</field>
        <field name="value">fix_discount_per_unit</field>
    </record>

    <record id="decimal_fix_discount" model="decimal.precision">
        <field name="name">Fix Discount</field>
        <field name="digits">15</field>
    </record>

</odoo>
