<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ir_ui_menu_users" model="ir.ui.view">
        <field name="name">restrict.menu</field>
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu_access"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Roles">
                    <field name="role_ids"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="ir_actions_server_restart_roles" model="ir.actions.server">
        <field name="name">Reiniciar Roles</field>
        <field name="model_id" ref="base.model_ir_ui_menu" />
        <field name="binding_model_id" ref="base.model_ir_ui_menu" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records._action_reset_roles()
        </field>
    </record>


</odoo>